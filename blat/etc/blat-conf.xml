<?xml version="1.0" ?>

<!-- configuration file for kmerHadoopApp

   this file should be in the classpath of hadoop somewhere.

  -->

<configuration>
    <!-- version number for application.  should match build version in pom.xml
    -->
    <property>
        <name>version</name>
        <value>0.1</value>
    </property>


    <!-- mapred.min.split.size -->
    <property>
        <name>mapred.min.split.size</name>
        <value>5000</value>
    </property>


    <!-- the commandline to execute for the blast command, eg:
         "-m 8 -p tblastn -b 1000000 -a 10"  this is the default
    -->
    <!--
    <property>
        <name>blast.commandline</name>
        <value></value>
    </property>
    -->

    <!-- the full pathname of the blast executable
     default is: "/home/asczyrba/src/blast-2.2.20/bin/blastall"
    -->
    <!--
    <property>
        <name>blast.commandpath</name>
        <value></value>
    </property>
    -->

    <!-- path to a temporary directory in which to do all the work
      default is "/tmp/blast"
    -->
    <!--
    <property>
        <name>blast.tmpdir</name>
        <value></value>
    </property>
    -->

    <property>
        <name>blat.cleanup</name>
        <value>true</value>
    </property>

    <property>
        <name>blat.skipexecution</name>
        <value>false</value>
    </property>

    <property>
        <name>blat.paired</name>
        <value>true</value>
    </property>

    <property>
        <name>blat.numreducers</name>
        <value>10</value>
    </property>

</configuration>

