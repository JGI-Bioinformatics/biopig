<?xml version="1.0" ?>

<!-- configuration file for kmerHadoopApp

   this file should be in the classpath of hadoop somewhere.

  -->

<configuration>
    <!-- version number for application.  should match build version in pom.xml
    -->
    <property>
        <name>version</name>
        <value>0.1.1</value>
    </property>

  <property>
    <name>mapred.child.java.opts</name>
    <value>-Xmx4000m</value>
  </property> 

  <property>
    <name>mapred.task.timeout</name>
    <value>162000000</value>
   </property>

    <property>
        <name>contigkmer.numreducers</name>
        <value>39</value>
    </property>

    <!-- mapred.min.split.size -->
    <property>
        <name>mapred.min.split.size</name>
        <value>5000</value>
    </property>

    <property>
        <name>contigendlength</name>
        <value>75</value>
    </property>

    <property>
        <name>numerrors</name>
        <value>2</value>
    </property>

    <property>
        <name>assembler.command</name>
        <value>cap3</value>
    </property>

    <property>
        <name>assembler.filterbysizespecial</name>
        <value>true</value>
    </property>

    <property>
        <name>assembler.removeidenticalsequences</name>
        <value>true</value>
    </property>

    <property>
        <name>assembler.readsizelimit</name>
        <value>1000</value>
    </property>
    
</configuration>

