<!-- configuration file for blatHadoopApp.

   this file should be in the classpath of hadoop somewhere when you run the application.

  -->

<configuration>
    <!--
    version number for application.  should match build version in pom.xml
    -->
    <property>
        <name>version</name>
        <value>0.1</value>
    </property>


    <!--
    defines the minimum size in bytes of each input split. used to control the maximum
    number of map tasks.  (eg if file size is 100 bytes and min is 10, then maximum number
    of mappers is 10).
    -->
    <property>
        <name>mapred.min.split.size</name>
        <value>5000</value>
    </property>

    <!--
    defines the maximum size in bytes of each input split.  used to control the minimum
    number of map tasks.
    -->
    <!--
    <property>
        <name>mapred.max.split.size</name>
        <value>10000</value>
    </property>
       -->

    <!--
    the commandline to execute for the blat command, default is
    "-out=blast8"
    -->
    <!--
    <property>
        <name>blat.commandline</name>
        <value>-out=blast8</value>
    </property>
    -->

    <!--
    the full pathname of the blast executable
    default is: "/jgi/tools/bin/blat"
    -->
    <!--
    <property>
        <name>blat.commandpath</name>
        <value>/jgi/tools/bin/blat</value>
    </property>
    -->

    <!--
    path to a temporary directory in which to do all the work
    default is "/tmp/blat"
    -->
    <!--
    <property>
        <name>blat.tmpdir</name>
        <value></value>
    </property>
    -->

    <!--
    boolean value, if false, will not delete scratch directory, useful
    for debugging.  defaults to true
    -->
    <!--
    <property>
        <name>blat.cleanup</name>
        <value>true</value>
    </property>
    -->

    <!--
    boolean, if true, specifies that the read file has paired data.  if paired, then it will automatically
    include the opposite pair in the read set before executing blat.
    -->
    <property>
        <name>blat.paired</name>
        <value>true</value>
    </property>

    <!--
    controls how many reducers, defaults to 1
    -->
    <property>
        <name>blat.numreducers</name>
        <value>10</value>
    </property>

</configuration>

