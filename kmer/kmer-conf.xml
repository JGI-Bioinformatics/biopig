<?xml version="1.0" ?>

<!-- configuration file for kmerHadoopApp
  --
  -- this file should be in the classpath of hadoop somewhere.
  --
  -->

<configuration>
    <!-- version number for application.  should match build version in pom.xml
    -->
    <property>
        <name>version</name>
        <value>0.1</value>
    </property>

    <!-- specifies the hostname for the cassandra data store
    -->
    <property>
        <name>cassandrahost</name>
        <value>thorium1</value>
    </property>

    <!-- specifies the port number for cassandra data store
    -->
    <property>
        <name>cassandraport</name>
        <value>9160</value>
    </property>

    <!-- specifies the maximum size in bytes of each input split, therefore
      -- specifies the number of map processes that hadoop will spawn.  ie
      -- 1000 byte file with a max split of 100 bytes will result in 10 map
      -- processes (spread on the hadoop cluster).
      -->
    <property>
        <name>mapred.max.split.size</name>
        <value>3000000</value>
    </property>

</configuration>

